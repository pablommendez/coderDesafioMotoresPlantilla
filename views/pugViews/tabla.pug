extends formulario

block tabla 
    if hasProducts 
        div(class="table-responsive")
            table(class="table table-dark")
                tr(style="color: yellow;")
                    th='Title'
                    th='Price'
                    th='Thumbnail'
                tr
                each item in items
                    tr
                        td=item.title
                        td=item.price
                        td=item.thumbnail
    else
        h3(class="alert alert-danger")='No se encontraron productos'